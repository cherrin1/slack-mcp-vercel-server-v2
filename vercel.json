{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/slack/events",
      "dest": "/api/slack/events.js"
    },
    {
      "src": "/api/mcp",
      "dest": "/api/mcp/index.js"
    },
    {
      "src": "/",
      "dest": "/api/mcp/index.js"
    }
  ]
}
