{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/channels",
      "dest": "/api/slack/channels.js"
    },
    {
      "src": "/users",
      "dest": "/api/slack/users.js"
    },
    {
      "src": "/channels/(.*)/history",
      "dest": "/api/slack/history.js?channel=$1"
    },
    {
      "src": "/users/(.*)",
      "dest": "/api/slack/user.js?user=$1"
    },
    {
      "src": "/search/messages",
      "dest": "/api/slack/search.js"
    },
    {
      "src": "/channels/(.*)/message",
      "dest": "/api/slack/send.js?channel=$1"
    },
    {
      "src": "/api/oauth/(.*)",
      "dest": "/api/oauth/$1"
    },
    {
      "src": "/api/slack/events",
      "dest": "/api/slack/events.js"
    },
    {
      "src": "/api/mcp",
      "dest": "/api/mcp/index.js"
    },
    {
      "src": "/",
      "dest": "/api/mcp/index.js"
    }
  ]
}
